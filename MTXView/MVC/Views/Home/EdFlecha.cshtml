@model MVC.Models.Arrows

@{
    Layout = "_Flechas";
}
<div class="container">

    <div class="form-control">
        @using (Html.BeginForm("EdFlecha", "Home", FormMethod.Post, new { @class = "card-body cardbody-color p-lg-5" }))
        {

            @Html.EditorFor(x=>x.id_image,new {@class = "form-control", @textindex = "1" })
            @Html.EditorFor(x=>x.nodeid,new {@class = "form-control", @textindex = "2"})
            @Html.EditorFor(x=>x.posicion,new {@class = "form-control", @textindex = "3"})
            <div class="text-center"><button type="submit" class="btn btn-primary">Guardar</button></div>
        }

    </div>
</div>