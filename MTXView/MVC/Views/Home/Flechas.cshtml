@model MVC.Models.Arrows

@{
    Layout = "_Flechas";
}
<div class="container">
        @Html.ActionLink("Crear","CFlecha",new{},new{@class="btn btn-primary"})
        <table>
            <tr>
                <th>Id imagen</th>
                <th>Nodo</th>
                <th>Posición</th>
            </tr>
            @foreach(var item in Model.list){
            <tr>
                <td>@item.id_image</td>
                <td>@item.nodeid</td>
                <td>@item.posicion</td>
                <td>@Html.ActionLink("Editar","EdFlecha",new{id=item.id,idimg=item.id_image,nodo=item.nodeid,pos=item.posicion},new{@class="btn btn-primary"})</td>
                <td>@Html.ActionLink("Eliminar","ElFlecha",new{id=item.id},new{@class="btn btn-danger"})</td>
            </tr>
            }
        </table>

</div>
