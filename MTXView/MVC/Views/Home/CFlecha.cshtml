@model MVC.Models.Arrows

@{
    Layout = "_Flechas";
}

<div class="form-control">
    @using (Html.BeginForm("CFlecha", "Home", FormMethod.Post))
    {
        
        @Html.TextBoxFor(x=>x.id,new {@type="hidden"})
        @Html.TextBoxFor(x=>x.id_image,new {@class = "form-control", @textindex = "1" })
        @Html.TextBoxFor(x=>x.nodeid,new {@class = "form-control", @textindex = "2"})
        @Html.TextBoxFor(x=>x.posicion,new {@class = "form-control", @textindex = "3"})
        <div class="text-center"><button type="submit" class="btn btn-primary">Guardar</button></div>
    }

</div>
