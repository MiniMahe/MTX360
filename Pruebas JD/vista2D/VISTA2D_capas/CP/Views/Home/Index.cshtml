    <div class="btn-group btn-group-justified botones-planta">
    @Html.ActionLink("Planta 1","Index","Home",null,new{@class="btn btn-primary boton-planta"})
    @Html.ActionLink("Planta 1","Planta2","Home",null,new{@class="btn btn-primary boton-planta"})
    @Html.ActionLink("Planta 1","Planta3","Home",null,new{@class="btn btn-primary boton-planta"})
    </div>



    <input type="search" class="form-control buscador" placeholder="Search" aria-label="Search"
           aria-describedby="search-addon" />

    <hr>
    <div class="barra-lateral">
        <ul class="nav nav-pills flex-column mb-auto caja-aulas-abajo">
             @foreach (var sala in Model.Salas)
            {
                <li class="nav-item enlace-aula">
                 <a href="@sala.url" class="nav-link bi me-2 text-white" aria-current="page" width="16" height="16">
                        <img src="@sala.imagen" class="img-aula" alt="" width="32" height="32">
                     @sala.aula
                 </a>
            </li>
            
            }



        </ul>
    </div>
    <hr>

</div>



<div class="contenedor-fondo">
    <img src="~/lib/imgs/Mapa_Planta_baja.png" alt="mapa" id="mapa" usemap="#mapa">

    <map name="mapa">
        @foreach(var sala in Model.Salas){
            <area shape="rect" coords="@sala.cordenadas" href="@sala.url" alt="mapa">
        }
    </map>


</div>
